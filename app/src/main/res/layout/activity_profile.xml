<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pf_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_left_black_24dp"/>


                    <TextView
                        android:id="@+id/pf_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="프로필"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="start"
                        android:textColor="#000000"/>



                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>



    <LinearLayout
        android:id="@+id/mypage_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingLeft="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_iv"
            android:layout_marginTop="16dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/bg_one03"
            android:layout_marginLeft="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="당근이"
                android:layout_toRightOf="@+id/iv_icon"
                android:layout_marginTop="32dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#111111"/>

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매너온도"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"/>


        <View style="@style/Divider"
            android:layout_marginTop="16dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="#eeefef">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="도선동 11회 인증"
                android:layout_marginTop="22dp"
                android:textSize="12dp"
                android:textColor="#666666"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019년 10월 28일 가입 (최근 3일 이내 활동)"
                android:textSize="12dp"
                android:textColor="#666666"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="활동 배지 0개"
            android:onClick="btnBadge"
            android:background="@drawable/bg_botton"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="left|center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>


        <View style="@style/Divider"
            android:layout_marginTop="16dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="판매 상품 0개"
            android:onClick="btnBadge"
            android:background="@drawable/bg_botton"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="left|center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>


        <View style="@style/Divider"
            android:layout_marginTop="16dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="받은 매너 평가"
            android:onClick="btnBadge"
            android:background="@drawable/bg_botton"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="left|center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>


        <View style="@style/Divider"
            android:layout_marginTop="16dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="받은 거래 후기(0)"
            android:onClick="btnBadge"
            android:background="@drawable/bg_botton"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="left|center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>


        <View style="@style/Divider"
            android:layout_marginTop="16dp"/>




    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>