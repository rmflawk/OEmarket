<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 당근"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="280dp"/>


            </LinearLayout>

            <View style="@style/Divider"
                android:layout_marginTop="16dp"/>




            <LinearLayout
                android:id="@+id/mypage_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingTop="8dp"
                android:paddingLeft="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_iv"
                    android:layout_marginTop="16dp"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/bg_one03"
                    android:layout_marginLeft="12dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="당근이"
                        android:layout_toRightOf="@+id/iv_icon"
                        android:layout_marginTop="18dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#111111"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="도선동"
                        android:layout_toRightOf="@+id/iv_icon"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="#333333"/>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="프로필보기"
                        android:background="@drawable/radius"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="16dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </LinearLayout>

            <View style="@style/Divider"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"/>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="12dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="판매내역"
                    android:background="@drawable/bg_botton"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ic_library_books"
                    android:drawableTint="@color/colorAccent"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="구매내역"
                    android:background="@drawable/bg_botton"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ic_move_to_inbox_black_24dp"
                    android:drawableTint="@color/colorAccent"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="관심목록"
                    android:background="@drawable/bg_botton"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/ic_favorite_border_black_24dp"
                    android:drawableTint="@color/colorAccent"/>


            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="12dp"
                android:background="#efefef"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#fffffd"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="16dp"
                    android:text="내 동네 설정"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:background="@drawable/bg_botton"
                    android:paddingRight="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:paddingTop="14dp"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="4dp"
                    android:text="동네 인증하기"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:background="@drawable/bg_botton"
                    android:paddingRight="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="18dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="16dp"
                    android:text="키워드 알림"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:background="@drawable/bg_botton"
                    android:paddingRight="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="18dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="모아보기"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:background="@drawable/bg_botton"
                    android:paddingRight="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
            </LinearLayout>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="12dp"
                android:background="#efefef"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="16dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="친구초대"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:background="@drawable/bg_botton"
                    android:paddingRight="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="18dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="16dp"
                    android:text="당근마켓 공유"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:background="@drawable/bg_botton"
                    android:paddingRight="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="18dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="공지사항"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:background="@drawable/bg_botton"
                    android:paddingRight="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="18dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="고객센터"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:background="@drawable/bg_botton"
                    android:paddingRight="8dp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:paddingTop="18dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="앱설정"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:background="@drawable/bg_botton"
                    android:paddingRight="20dp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
            </LinearLayout>




        </LinearLayout>

    </ScrollView>





</androidx.drawerlayout.widget.DrawerLayout>
















