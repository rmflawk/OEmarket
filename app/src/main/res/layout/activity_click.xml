<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClickActivity">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/one_ace"/>

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:theme="@style/AppTheme.Appbar"
                android:background="#11ffffff">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_click_c"/>

                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.AppBarLayout>

        </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="16dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bg_one03"
            android:layout_marginLeft="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="행당동"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매너온도 - "
            android:layout_marginTop="24dp"
            android:textSize="14sp"
            android:textColor="#888888"
            android:textStyle="bold"
            android:layout_marginLeft="180dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:textSize="14sp"
            android:textColor="#444444"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(삽니다) 해법문학시리즈 2015개정 교육과정"
        android:textStyle="bold"
        android:textColor="#777777"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="abcabc\nabcabcabcabc\nabcabcabcabc\nabcabcabcabc\nabcabc
abcabc\nabcabcabcabc\nabcabcabcabc\nabcabcabcabc\nabcabc
abcabc\nabcabcabcabc\nabcabcabcabc\nabcabcabcabc\nabcabc
abcabc\nabcabcabcabc\nabcabcabcabc\nabcabcabcabc\nabcabc
abcabc\nabcabcabcabc\nabcabcabcabc\nabcabcabcabc\nabcabc
abcabc\nabcabcabcabc\nabcabcabcabc\nabcabcabcabc\nabcabc
abcabc\nabcabcabcabc\nabcabcabcabc\nabcabcabcabc\nabcabc"
        android:layout_marginBottom="16dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:text="채팅"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:text="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="개 "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:text="관심"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:text="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="개 "/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:text="조회"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:text="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="개 "/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이 게시글 신고하기"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:paddingRight="300dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_botton"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginLeft="2dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글쓰기"
            android:textColor="#777777"
            android:textSize="12sp"
            android:layout_marginLeft="300dp"
            android:background="#ffffff"/>

    </LinearLayout>


</LinearLayout>

</ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>