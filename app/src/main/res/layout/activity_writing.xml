<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".WritingActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중고거래 글쓰기"
                    android:layout_gravity="center"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"/>


            </LinearLayout>



            <Button
                android:id="@+id/clickBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료"
                android:background="@drawable/bg_botton"
                android:layout_gravity="center"
                android:layout_marginLeft="180dp"
                android:textSize="16sp"
                android:textColor="#333333"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_alignParentRight="true"
                android:onClick="clickUpload"/>



        </RelativeLayout>

        <View style="@style/Divider"
            android:layout_marginTop="14dp" />

        <EditText
            android:id="@+id/name"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:hint="제목"
            android:cursorVisible="false"
            android:background="@null"/>

        <View style="@style/Divider"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/writing_tv_kategotie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:cursorVisible="false"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="#444444"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_keyboard_arrow_down"
                android:paddingRight="16dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


        <View style="@style/Divider"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도선동과 근처 동네 56개"
                android:cursorVisible="false"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="#444444"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_keyboard_arrow_down"
                android:paddingRight="16dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View style="@style/Divider"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/price"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:paddingLeft="16dp"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="#999999"
                android:hint="\ 가격 ( 선택사항 )" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="16dp"
                android:text="가격제안 받기"
                android:paddingRight="14dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View style="@style/Divider"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/writing_iv"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/aggplant"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:hint="사진을 올려주세요"/>

        </LinearLayout>


        <!--  android:editable="false" -->
        <EditText
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:cursorVisible="false"
            android:paddingLeft="16dp"
            android:background="@null"
            android:textSize="16sp"
            android:textColor="#999999"
            android:hint="내용을 작성해주세요"
            android:layout_marginBottom="16dp"
            android:gravity="top"/>



        <View style="@style/Divider"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/writing_iv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_video_library"
                android:background="@color/white"
                android:paddingLeft="8dp"
                android:onClick="clickCamera"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="8dp"
                android:text="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" / 10"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_library_books"
                    android:layout_alignParentRight="true"
                    android:paddingRight="16dp"/>

            </RelativeLayout>


        </LinearLayout>




    </LinearLayout>







